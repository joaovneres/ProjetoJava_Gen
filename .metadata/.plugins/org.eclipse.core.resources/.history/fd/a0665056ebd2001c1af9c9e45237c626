package Classes;

import java.util.Scanner;

public class Doador extends Pessoa {
	private String tipoLivro;
	private int qtdLivro;
	private String nomeLivro;

	public Doador(String nome, int idade, String cpf, String telefone, String tipoLivro, int qtdLivro,
			String nomeLivro) {
		super(nome, idade, cpf, telefone);
		this.tipoLivro = tipoLivro;
		this.qtdLivro = qtdLivro;
		this.nomeLivro = nomeLivro;
	}

	public Doador() {
		super();
		this.tipoLivro = null;
		this.qtdLivro = 0;
		this.nomeLivro = null;
	}

	public void cadastrar(Doador objeto) {
		Scanner scan = new Scanner(System.in);
		System.out.println("\nDigite o nome do funcionárie: ");
		objeto.setNome(scan.next());
		System.out.println("\nDigite a idade do funcionárie: ");
		objeto.setIdade(scan.nextInt());
		System.out.println("\nDigite o CPF do funcionárie: ");
		objeto.setCpf(scan.next());
		System.out.println("\nDigite o telefone do funcionárie: ");
		objeto.setTelefone(scan.next());
		System.out.println("\nDigite o Id do funcionárie: ");
		objeto.setTipoLivro(scan.next());
		System.out.println("\nDigite o setor do funcionárie: ");
		objeto.setQtdLivro(scan.nextInt());
		System.out.println("\nDigite o salário do funcionárie: ");
		objeto.setNomeLivro(scan.next());
	}

	@Override
	public void imprimirInfo() {

	}
	
	@Override
	public void listar() {
		
	}

	public String getTipoLivro() {
		return tipoLivro;
	}

	public void setTipoLivro(String tipoLivro) {
		this.tipoLivro = tipoLivro;
	}

	public int getQtdLivro() {
		return qtdLivro;
	}

	public void setQtdLivro(int qtdLivro) {
		this.qtdLivro = qtdLivro;
	}

	public String getNomeLivro() {
		return nomeLivro;
	}

	public void setNomeLivro(String nomeLivro) {
		this.nomeLivro = nomeLivro;
	}

}
