				Livro oLivro = new Livro();
				oLivro.listar(listaL);
				break;
			default:
				if (x != 0)
					System.out.println("Opção inválida!");
			}
		} while (x != 0);
	}
	public void dConsultar(List<Aluno> listaA,List<Doador> listaD,List<Funcionario> listaF,List<Livro> listaL) {
